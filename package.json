{
  "name": "root",
  "private": true,
  "scripts": {
    "lint": "yarn prettier && eslint 'packages/**/*.ts'",
    "prettier": "prettier --write 'packages/**/*.ts'",
    "start:dev": "CONFIG_PROFILE=DEV docker-compose up --no-deps",
    "start:int": "CONFIG_PROFILE=INT docker-compose up --no-deps",
    "start:prod": "CONFIG_PROFILE=PROD docker-compose up --no-deps",
    "test": "jest --runInBand"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-lerna": "^1.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": ">=25 <26",
    "lerna": "^3.20.2",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "ts-jest": "^25.5.0",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  },
  "workspaces": [
    "packages/api/*",
    "packages/core/*",
    "packages/tools/*"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
